<div class="card text-center mt-4">
  <div class="card-header">
    post : <%= @post.title %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @post.title %></h5>
    <p class="card-text"><%= @post.body %></p>
    <% if current_user %>
      <%= link_to_if(policy(@post).update?, "Edit", edit_post_path(@post), class: "btn btn-sm btn-success ") %>
      <%= button_to "Delete", post_path(@post), method: :delete, :disabled => !(policy(@post).delete?), data: { confirm: "You sure?" }, class: "btn btn-sm btn-danger", form: { class: "d-inline" } %>
    <% end %>
  </div>
  <div class="card-footer text-muted">

    <span class="me-4"> <em>created :</em>  <%= time_ago_in_words(@post.created_at) %> ago</span>
    <span> <em>last updated : </em><%= time_ago_in_words(@post.updated_at) %> ago</span>


  </div>
</div>
<div class="mt-3 offset-5 ">
  <%= link_to "Go back", posts_path, class: "btn btn-secondary mb-3 col-4" %>
</div>
